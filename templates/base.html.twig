<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}Welcome to sonata project!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('statics/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('statics/css/sticky-footer-navbar.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('statics/css/all.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('statics/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>

    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="/">Sonata</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {{ app.request.get('_route') == 'index' ? 'active' }}">
                        <a class="nav-link" href="{{ path('index') }}">О нас</a>
                    </li>
                    <li class="nav-item {{ app.request.get('_route') == 'news_index' ? 'active' }}">
                        <a class="nav-link" href="{{ path('news_index') }}">Новости</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Сообщество</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Документация</a>
                    </li>
                </ul>
                {#<form class="form-inline mt-2 mt-md-0">#}
                    {#<input class="form-control mr-sm-2" type="text" placeholder="Найти" aria-label="Search">#}
                    {#<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button>#}
                {#</form>#}
            </div>
        </nav>
    </header>


        {% block body %}{% endblock %}
        {% block footer %}
            <footer class="footer">
                <div class="container">
                    <span class="text-muted">Copirate: {{ "now"|date("Y") }} </span>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>
